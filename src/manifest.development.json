{
    "manifest_version": 3,
    "name": "ECHO Helper",
    "description": "The easiest, fastest way to generate ECHO widget",
    "version": "0.0.1",
    "background": {
        "service_worker": "/background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "/content.js"
            ]
        }
    ],
    "permissions": [
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "http://*/",
        "https://*/"
    ]
}