{
    "manifest_version": 3,
    "name": "ECHO Helper",
    "description": "The easiest, fastest way to generate ECHO widget",
    "version": "0.0.1",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "echo16.png",
            "32": "echo32.png",
            "48": "echo48.png",
            "128": "echo128.png"
        }
    },
    "icons": {
        "16": "echo16.png",
        "32": "echo32.png",
        "48": "echo48.png",
        "128": "echo128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://opensea.io/assets/*"
            ],
            "js": [
                "/opensea.js"
            ]
        }
    ],
    "permissions": [
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "http://*/",
        "https://*/"
    ]
}